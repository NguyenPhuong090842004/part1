<%- include('../partials/head') %>
<%- include('../partials/header') %>
<div class="container">
<div class="d-flex justify-content-between align-items-center mb-3">
<h1>Suppliers</h1>
<a class="btn btn-primary" href="/suppliers/new">New Supplier</a>
</div>
<table class="table table-striped">
<thead>
<tr>
<th>Name</th>
<th>Address</th>
<th>Phone</th>
<th>Actions</th>
</tr>
</thead>
<tbody>
<% suppliers.forEach(s => { %>
<tr>
<td><%= s.name %></td>
<td><%= s.address %></td>
<td><%= s.phone %></td>
<td>
<a class="btn btn-sm btn-secondary" href="/suppliers/<%= s._id %>/edit">Edit</a>
<form action="/suppliers/<%= s._id %>?_method=DELETE" method="POST" style="display:inline-block">
<button class="btn btn-sm btn-danger" type="submit">Delete</button>
</form>
</td>
</tr>
<% }) %>
</tbody>
</table>
</div>
<%- include('../partials/footer') %>